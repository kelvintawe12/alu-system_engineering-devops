#!/usr/bin/env bash
# This script configures Nginx to redirect /redirect_me to a specified URL with a 301 status code.

# Install Nginx if not installed
sudo apt update
sudo apt install -y nginx

# Create or modify the Nginx configuration to add the redirection
# We're adding a server block if it doesn't exist, or modifying an existing one.
server_block="server {
    listen 80 default_server;
    listen [::]:80 default_server;

    # Define server_name as your domain or IP address (if you don't have a domain, use the IP)
    server_name _;

    # Location block to handle redirection
    location /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }

    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;
}"

# Write the server block to the default config file
echo "$server_block" | sudo tee /etc/nginx/sites-available/default

# Check if the Nginx config is correct
sudo nginx -t

# Restart Nginx to apply the changes
sudo systemctl restart nginx

# Confirm the changes by querying /redirect_me (this will show the 301 redirect)
curl -sI http://localhost/redirect_me/
